{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es6",
    "module": "commonjs", // Changed from commonjs to esnext
    "strict": true,
    "allowJs": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node" // Ensure correct module resolution
  },
  "include": [
    "src"
  ]
}
